<h1>Welcome to dashboard of Employer</h1>
 <div class="card border-light mb-3" style="max-width: 18rem;">
<%if @job==0%>
  <div class="card-header"><h2>You have not posted any job </h2></div>
  <p>click on this to add job</p>
  <%=link_to "Add Job", user_jobs_path(@user.id),class: "btn btn-primary"%>
<%else%>
    <div class="card-header">Listed Jobs : <%=@job%></div>
    <% @user.jobs.each do |a| %>
    <p>
      
    <li><%= link_to a.job_title, [a.user , a ],class: "btn btn-outline-primary"%>
     
    
      <%= a.job_des %></li></p>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <%= link_to "Delete Job", [a.user, a],class: "btn btn-secondary btn-sm",
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
      </div>

<% end %>
<%end%>