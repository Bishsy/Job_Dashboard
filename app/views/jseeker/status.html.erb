<h1>Status of Applied Jobs</h1>
<% @job.zip(@a) do |a, b| %>
    <div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title"><%=a.job_title%></h5>
        <% if b.status==1%>
            <%="pending"%><br>
        <% elsif b.status==2%>
            <%="approved"%><br>
        <%else%>
            <%="rejected"%><br>
        <%end%>
        <hr>
        <p class="card-text"><%=a.job_des%></p>
       </div>
</div> 
   
<% end %>


    
   
  